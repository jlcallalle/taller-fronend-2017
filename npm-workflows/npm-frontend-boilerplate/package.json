{
  "name": "npm-frontend-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate de Automatización y Optimización de Tareas Front end con Scripts NPM",
  "main": "package.json",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "sass": "node-sass -w -o ./src/css  ./src/scss",
    "pug": "pug -w -P -p ./src/pug/partials/ -O ./src/pug/options.json ./src/pug/templates/ -o ./src/",
    "babel": "babel -w ./src/es6/ -d ./src/js/",
    "watch:metalang": "parallelshell \"npm run sass\" \"npm run pug\" \"npm run babel\"",
    "dev:serve": "browser-sync start --server  --startPath ./src  --serverStatic src --files ./src --reload-delay=300 --reload-debounce=500",
    "watch:devserve": "parallelshell \"npm run dev:serve\" \"npm run watch:metalang\"",
    "clean": "rimraf ./dist/*",
    "build:folders": "mkdirp ./dist/css ./dist/js ./dist/img"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-cli": "^6.24.1",
    "babel-preset-latest": "^6.24.1",
    "browser-sync": "^2.18.12",
    "buildify": "^0.4.0",
    "copy": "^0.3.0",
    "html-minifier": "^3.5.2",
    "imagemin": "^5.3.1",
    "imagemin-cli": "^3.0.0",
    "imagemin-gifsicle": "^5.1.0",
    "imagemin-jpeg-recompress": "^5.1.0",
    "imagemin-pngquant": "^5.0.1",
    "imagemin-svgo": "^5.2.2",
    "imagemin-webp": "^4.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.3",
    "parallelshell": "^3.0.2",
    "postcss-cli": "^3.2.0",
    "pug": "^2.0.0-rc.2",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.1",
    "uncss": "^0.14.1",
    "useref": "^1.2.0",
    "useref-cli": "^1.0.0"
  }
}
